# vim: ft=cfg foldmethod=marker
[global]
    follow                  = mouse
    geometry                = "0x0-5+25"
    indicate_hidden         = yes
    shrink                  = no            # Shrink window if smaller than width.

    transparency            = 20            # Range: [0, 100]
    notification_height     = 0
    separator_height        = 2
    padding                 = 8
    horizontal_padding      = 8
    frame_width             = 1
    frame_color             = "#99a3ff"
    separator_color         = auto
    corner_radius           = 5

    sort                    = yes           # Sort messages by urgency.
    idle_threshold          = 30

# ┏━━━━━━┓
# ┃ Text ┃
# ┗━━━━━━┛
    font                    = Monospace 11
    line_height             = 4
    markup                  = full
    format                  = "<b>%s</b>\n%b"
    alignment               = left
    vertical_alignment      = center
    show_age_threshold      = 60
    word_wrap               = yes
    ellipsize               = middle
    ignore_newline          = no
    stack_duplicates        = true
    hide_duplicate_count    = false
    show_indicators         = yes

# ┏━━━━━━━┓
# ┃ Icons ┃                                             # Unused
# ┗━━━━━━━┛
    icon_position           = left
    min_icon_size           = 0
    max_icon_size           = 32

    ### History ###
    sticky_history          = yes
    history_length          = 20

# ┏━━━━━━━━━━━━━━━┓
# ┃ Misc/Advanced ┃
# ┗━━━━━━━━━━━━━━━┛
# {{{
    browser                 = /usr/bin/firefox --new-tab

    always_run_script       = true
    startup_notification    = true
    verbosity               = mesg
    title                   = Dunst
    class                   = Dunst
    force_xinerama          = false
    ignore_dbusclose        = false

    mouse_left_click        = do_action, close_current
    mouse_right_click       = close_all
# }}}

[shortcuts]
    close                   = mod4+shift+comma          # Close notification
    close_all               = mod4+shift+period         # Close all notifications
    history                 = mod4+shift+apostrophe     # Redisplay last message(s)

[urgency_low]
    background              = "#222222"
    foreground              = "#888888"
    timeout                 = 3

[urgency_normal]
    background              = "#1e1e1e"
    foreground              = "#99a3ff"
    timeout                 = 10

[urgency_critical]
    background              = "#1e1e1e"
    foreground              = "#ff8c8c"
    frame_color             = "#ff8c8c"
    timeout                 = 20
