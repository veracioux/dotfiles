# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # Use Arch Linux box
  config.vm.box = "archlinux/archlinux"

  # VM Name
  config.vm.define "dev-playground"

  # Network configuration
  config.vm.network "private_network", type: "dhcp"

  # Hostname
  config.vm.hostname = "dev-playground"

  # Synced folder (optional, can customize)
  config.vm.synced_folder ".", "/vagrant", disabled: false

  # Provider-specific configuration
  config.vm.provider "virtualbox" do |vb|
    # Display the VirtualBox GUI when booting the machine
    vb.gui = false

    # Customize the amount of memory and CPUs on the VM:
    vb.memory = "12288"
    vb.cpus = 6

    # Name in VirtualBox
    vb.name = "dev-playground"
  end

  # Bootstrap python, create user, and resolve potential conflicts
  config.vm.provision "shell", privileged: true do |shell|
    shell.inline = <<-SHELL
      #!/bin/bash
      set -e
      pacman -Sy --noconfirm archlinux-keyring
      pacman -S --noconfirm base-devel python python-pip sudo
      
      # Create 'haris' user to match live laptop
      if ! id -u haris &>/dev/null; then
        useradd -m -G wheel -s /bin/bash haris
        echo "haris ALL=(ALL) NOPASSWD: ALL" > /etc/sudoers.d/haris
        chmod 440 /etc/sudoers.d/haris
      fi
    SHELL
  end

  # Ansible provisioning
  config.vm.provision "ansible" do |ansible|
    ansible.playbook = "main.yml"
    ansible.verbose = true
    ansible.extra_vars = {
      username: "haris"
    }
  end
end
